<!-- 底层主界面 -->
<view class="pages" >
  <view class="intoButton">
    <block >
      <image bindtap="intoButtonTap" class="intoButtonIcon" src="../../imgs/tap.png" mode="cover"></image>
      <text class="buttonText">点击按钮支持</text>
