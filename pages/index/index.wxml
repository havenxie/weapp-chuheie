<!-- 自定义选择器开始 -->
<view wx:if="{{showPicker}}" class="modelPicker">
  <!-- 关闭按钮 -->
  <view class='close' bindtap="closeQuyu"> × </view>
  <!-- 选择区域 -->
  <view class="selectArea">
    <text class="selectTxt">区 域</text>
    <view class="selectBox {{showQuyuItems ? 'borderRed' : ''}}" bindtap='bindShowQuyuItems'>
      <view><!--下拉框 -->
        <text>{{quyu == '' ? "请选择区域" : quyu}}</text>
        <text class='xiala'>▼</text>
      </view>
      <!-- 下拉需要显示的列表 -->
      <scroll-view scroll-y="true" style="height: 500%" class="selectItems" wx:if="{{showQuyuItems}}">
          <view class="selectItem" catchtap="selectQuyu" data-name="重庆分店">重庆分店</view>
          <view class="selectItem" catchtap="selectQuyu" data-name="东莞南城分店">东莞南城分店</view>
          <view class="selectItem" catchtap="selectQuyu" data-name="东莞总店">东莞总店</view>
          <view class="selectItem" catchtap="selectQuyu" data-name="东莞总店">东莞总店2</view>
      </scroll-view>
    </view>
  </view>
  <!-- 选择街道 -->
  <view class="selectArea"  wx:if="{{!showQuyuItems && (quyu != '')}}">
    <text class='selectTxt'>镇 街</text>
    <view class="selectBox" bindtap='bindShowZhenjieItems'>
      <view><!--下拉框-->
        <text>{{zhenjie == '' ? "请选择镇街" : zhenjie}}</text>
        <text class='xiala'>▼</text>        
      </view>
      <!-- 下拉需要显示的列表 -->
      <scroll-view scroll-y="true" style="height: 400%" class="selectItems" wx:if="{{showZhenjieItems}}">
          <view class="selectItem" catchtap="selectZhenjie" data-name="街道1">街道1</view>
          <view class="selectItem" catchtap="selectZhenjie" data-name="街道2">街道2</view>
          <view class="selectItem" catchtap="selectZhenjie" data-name="街道3">街道3</view>
          <view class="selectItem" catchtap="selectZhenjie" data-name="街道4">街道4</view>
      </scroll-view>
    </view>
  </view>
  <!-- 显示文本 -->
  <view class='tips1'>提交资料后您将参与抽奖哦</view>
  <view class='tips2'>您提供的真实信息，将使我们的统计数据真实有效，避免刷票行为产生</view>
  <!-- 提交按钮 -->
  <button  disabled="{{(quyu == '') || (zhenjie == '')}}" bindtap='submit' class='submit'>提交</button>
</view>
<!-- 背景半透明状态 -->

<view wx:if="{{showPicker}}" class="mask"></view>
<!-- 自定义选择器结束 -->
<!-- --------------------------------------------------------------------------------------- -->

